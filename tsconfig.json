{
  "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es2019",
      "module": "commonjs",
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}